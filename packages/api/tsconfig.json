{
    "compilerOptions": {
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        /* Basic Options */
        "target": "es5",
        "module": "commonjs",
        "lib": ["dom", "ESNext"],

        /* Strict Type-Checking Options */
        "strict": true,

        /* Module Resolution Options */
        "moduleResolution": "node",
        "esModuleInterop": true,

        /* Advanced Options */
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        /* Basic Options */
        "declarationMap": true,
        "sourceMap": true,
        "composite": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
